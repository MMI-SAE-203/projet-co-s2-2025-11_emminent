---
interface Props {
    title: string;
    description: string;
    features: string[];
    buttonText: string;
    buttonLink: string;
}
import Button from "../components/Button.astro";
const { title, description, features, buttonText, buttonLink } = Astro.props;
---

<div class="bg-[#52289D] text-white rounded-xl p-6 md:p-8 mb-7">
    <h2 class="text-2xl font-semibold">
        {title}
    </h2>
    <p class="mb-4">
        {description}
    </p>

    <h3 class="font-medium">Fonctionnalit√©s :</h3>
    <ul class="list-disc list-inside mt-2 space-y-1">
        {features.map((feature) => <li>{feature}</li>)}
    </ul>

    <div class="mt-6">
        <Button link={buttonLink} text={buttonText} />
    </div>
</div>
